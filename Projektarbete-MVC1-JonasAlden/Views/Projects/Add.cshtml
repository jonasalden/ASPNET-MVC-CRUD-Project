@model Projektarbete_MVC1_JonasAlden.ViewModels.Projects.CreateProjectViewModel
@{
    ViewBag.Title = "Add";
}
<div class="row">
    <div class="col-md-12">
        <h2>Add projects</h2>
        @if (TempData["Message"] != null)
        {
            <div class="row">
                <div class="alert @TempData["Type"]" role="alert">@TempData["Message"]</div>
            </div>
        }
        @using (Html.BeginForm("Add", "Projects", FormMethod.Post))
        {
            <div class="row">
                <form role="form">
                    <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Title, "Title")
                        @Html.EditorFor(m => m.Title, new {htmlAttributes = new {@class = "form-control", @placeholder = "Title",}})
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.FirstName, "Firstname")
                        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Projectleader-Firstname", } })
                    </div>
                    <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.SurName, "Surname")
                        @Html.EditorFor(m => m.SurName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Projectleader-Surname", } })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Platform, "Platform")
                        @Html.EditorFor(m => m.Platform, new { htmlAttributes = new { @class = "form-control", @placeholder = "Platform" } })
                    </div>
                    <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.ReleaseDate, "Release date")
                        @Html.EditorFor(m => m.ReleaseDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-xs-10 col-sm-12 col-md-12 col-lg-12">
                        @Html.LabelFor(m => m.Description, "Description")
                        <div class="clearfix"></div>
                        @Html.TextAreaFor(model => @model.Description, new { @class = "form-control", @id = "TextAreaSize", rows = "10", @placeholder = "Description" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-xs-10 col-sm-4 col-md-4 col-lg-4">
                        <input type="submit" value="Add Project" class="btn btn-default" />
                    </div>
                </form>
                <div class="clearfix"></div>               
            </div>
        }
    </div>
</div>
